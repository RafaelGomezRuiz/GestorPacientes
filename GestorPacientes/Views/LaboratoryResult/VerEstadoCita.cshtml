@using PatientManager.Core.Application.ViewModels.LaboratoryResult;


@model List<LaboratoryResultViewModel>
@{
    ViewData["Title"] = "appointment Home";
}

<div class="container-fluid">
    <div class="row ">
        <div class="col-12">
            @if (Model == null || Model.Count == 0)
            {
                <h3>No hay citas</h3>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-primary">
                        <h3 class="text-white"> Lista de citas</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (LaboratoryResultViewModel labResult in Model)
                            {
                                <div class="col-3 mb-3">
                                    <div class="card shadow-sm">
                                        <div class="card-body">
                                            <p class="card-text">Paciente: @labResult.PatientName</p>
                                            <p class="card-text">Prueba: @labResult.TestName</p>
                                            <p class="card-text">Estado: @(labResult.Status ==false ? "Pendiente":"Completado")</p>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a asp-controller="Appointment" asp-action="Completar" asp-route-appointmentId="@labResult.AppointmentId" class="btn btn-sm btn-outline-success">Completar cita</a>
                                                <a asp-controller="Appointment" asp-action="Index" class="btn btn-sm btn-outline-warning ms-3">Cerrar resultados</a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>