@model PatientManager.Core.Application.ViewModels.Patient.SavePatientViewModel
@{
    ViewData["Title"] = "Eliminar paciente";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Esta seguro que desea eliminar al paciente : @Model.Name?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Patient" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-primary">Eliminar</button>
                    <a asp-controller="Patient" asp-action="Index" class="btn btn-warning">Volver atras</a>
                </form>
            </div>
        </div>
    </div>
</div>

