@using PatientManager.Core.Application.ViewModels.LaboratoryResult;


@model List<LaboratoryResultViewModel>
@{
    ViewData["Title"] = "appointment Home";
}

<div class="container-fluid">
    <div class="row mb-3 d-flex justify-content-end">
        <div class="col-2 ms-4">
            <a asp-controller="Appointment" asp-action="Completar" class="btn btn-lg btn-outline-success"> Crear cita</a>
            <a asp-controller="LaboratoryResult" asp-action="Index" class="btn btn-lg btn-outline-success"> Cerrar resultados</a>
        </div>
    </div>
    <div class="row ">
        <div class="col-12">
            @if (Model == null || Model.Count == 0)
            {
                <h3>No hay citas</h3>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-primary">
                        <h3 class="text-white"> Lista de citas</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (LaboratoryResultViewModel labResult in Model)
                            {
                                <div class="col-3 mb-3">
                                    <div class="card shadow-sm">
                                        <div class="card-body">
                                            <p class="card-text">Paciente: @labResult.PatientName</p>
                                            <p class="card-text">Prueba: @labResult.TestName</p>
                                            <p class="card-text">Prueba: @(labResult.Status == false ? "Pendiente" : "Completado")</p>
                                            <p class="card-text">Descripcion: @labResult.Descripcion</p>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <a asp-controller="Appointment" asp-action="Delete" asp-route-id="@labResult.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>