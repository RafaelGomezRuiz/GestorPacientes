@using PatientManager.Core.Application.ViewModels.User;

@model List<UserViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="col-12 row mb-3 ">
        <div class="col-3 offset-10">
            <a asp-controller="User" asp-action="Register" class="btn btn-lg btn-outline-success"><i class="bi-plus"> Crear usuario</i></a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @if (Model == null || Model.Count == 0)
            {
                <h3>No hay productos</h3>
            }
            else
            {
            <div class="card shadow-sm">
                <div class="card-header bg-primary">
                    <h3 class="text-white">Listado de usuarios</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (UserViewModel item in Model)
                        {
                            <div class="col-3 mb-3">
                                <div class="card shadow-sm">
                                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" class="img-product-size  bd-placeholder-img img-fluid card-img-top " />
                                    <div class="card-body">
                                        <h3>Name: @item.Name @item.LastName</h3>
                                        <p class="card-text">Email: @item.Email</p>
                                        <p class="card-text">UserName: @item.UserName</p>
                                        <p class="card-text">UserType: @item.UserType</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                                <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>